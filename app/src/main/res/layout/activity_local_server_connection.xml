<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mansourahmed.android.chat.client.ConnectionActivity"
    >

    <TextView
        android:id="@+id/server_startup"
        android:text="@string/server_startup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"/>
    <EditText
        android:id="@+id/local_hostname"
        android:hint="Hostname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:lines="1"
        android:cursorVisible="false"
        android:inputType="none"
        />
    <EditText
        android:id="@+id/local_portnumber"
        android:hint="Port Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="none"
        android:lines="1"
        android:cursorVisible="false"/>
    <EditText
        android:id="@+id/local_username"
        android:hint="Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:cursorVisible="true"/>
    <Button
        android:text="@string/chat_locally"
        android:id="@+id/chat_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="chatOnLocalServer"/>


</LinearLayout>
