<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mansourahmed.android.chat.ConnectionActivity"
    android:background="@color/accent_material_light"
    >

    <TextView android:text="@string/cta_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
    <EditText
        android:id="@+id/hostname"
        android:text="Hostname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:cursorVisible="true"
        android:background="@color/accent_material_dark"/>
        <!--android:onClick="clearTextHostname"/>-->
    <EditText
        android:id="@+id/portnumber"
        android:text="Port Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:cursorVisible="true"
        android:background="@color/accent_material_light"/>
        <!--android:onClick="clearTextPortNumber"/>-->
    <EditText
        android:id="@+id/username"
        android:text="Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:cursorVisible="true"
        android:background="@color/accent_material_dark"/>
        <!--android:onClick="clearTextUsername"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
    <Button
        android:text="Connect!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="connect"/>


</LinearLayout>
